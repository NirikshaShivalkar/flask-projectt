pipeline {
    agent any

    environment {
        VIRTUAL_ENV = "venv"
    }

    stages {
        stage("Git Clone") {
            steps {
                git(
                    credentialsId: 'c7c078f8-e44a-4217-a0ba-0e48a22bfd02',
                    branch: 'main',
                    url: 'https://github.com/NirikshaShivalkar/flask-projectt.git'
                )
                bat "dir /s"  // List files for debugging
            }
        }

        stage('Set Up Python Environment') {
            steps {
                bat '''
                    echo "ğŸ”¹ Checking if Python is installed..."
                    python --version || exit /b 1

                    echo "ğŸ”¹ Creating virtual environment..."
                    python -m venv venv

                    echo "ğŸ”¹ Activating virtual environment..."
                    call venv\\Scripts\\activate

                    echo "ğŸ”¹ Checking if requirements.txt exists..."
                    if not exist requirements.txt (
                        echo "âŒ ERROR: requirements.txt not found!"
                        exit /b 1
                    )

                    echo "ğŸ”¹ Upgrading pip and installing dependencies..."
                    python -m pip install --upgrade pip
                    python -m pip install -r requirements.txt || exit /b 1
                '''
            }
        }

        stage('Run Tests') {
            steps {
                bat '''
                    echo "ğŸ”¹ Running Tests..."
                    call venv\\Scripts\\activate
                    pytest --junitxml=report.xml || (
                        echo "âŒ Tests Failed!"
                        exit /b 1
                    )
                '''
            }
        }

        stage('Build & Deploy') {
            when {
                expression { return currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                bat '''
                    echo "ğŸš€ Deploying the app..."
                    call venv\\Scripts\\activate

                    echo "ğŸ”¹ Starting Flask application..."
                    python app.py || exit /b 1

                    echo "âœ… Application deployed successfully!"
                '''
            }
        }
    }

    post {
        always {
            junit 'report.xml'
        }
        failure {
            echo 'âŒ Test Failed! Stopping Deployment.'
        }
        success {
            echo 'âœ… All tests passed! Application deployed successfully.'
        }
    }
}
